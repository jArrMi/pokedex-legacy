<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp">

    <ImageView
        android:id="@+id/itemPokemonImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/itemSpacer"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/itemPokemonImage" />

    <TextView
        android:id="@+id/itemPokemonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/itemSpacer"
        app:layout_constraintTop_toTopOf="@id/itemPokemonImage" />
</androidx.constraintlayout.widget.ConstraintLayout>
